---
import type { CollectionEntry } from "astro:content";

type Props = {
  entry: CollectionEntry<"works">;
}

const { entry } = Astro.props;
---

<style>
    .image-tile {
        position: relative;
        width: 200px;
        height: 200px;
        overflow: hidden;
        border-radius: 4px;
        cursor: pointer;
    }

    .image-tile img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease, filter 0.3s ease;
    }

    .image-tile:hover img {
        transform: scale(1.2);
        filter: opacity(0.5);
        background: rgb(37, 37, 40);
    }

    .image-tile .title {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        text-align: center;
        padding: 10px;
        opacity: 0;
        transition: opacity 0.3s ease;
        border-radius: 4px;
    }

    .image-tile:hover .title {
        opacity: 1;
    }
</style>

<a href={`/${entry.collection}/${entry.slug}`}>
    <div class="image-tile">
        <img src={entry.data.thumbnail} alt={entry.data.title} />
        <div class="title">{entry.data.title}</div>
    </div>
</a>